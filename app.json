{
  "name": "Neuro - Smart Notes",
  "description": "A barebones django application. Soon to be great.",
  "image": "heroku/python",
  "repository": "https://github.com/jwbaldwin/neuro-note.git",
  "keywords": ["python", "django" ],
  "addons": [ "heroku-postgresql" ],
  "env": {
    "SECRET_KEY": {
      "description": "The secret key for the Django application.",
      "generator": "secret"
    }
  },
  "environments": {
    "test": {
      "scripts": {
        "test-setup": "python3 manage.py collectstatic --noinput",
        "test": "python3 manage.py test"
      }
    }
  }
}